 <div>
  <% if current_page?(action: 'index') %>
  <h1>User info</h1>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <h4>name</h4>
  <%= current_user.name %>
  <h4>introduction</h4>
  <%= current_user.introduction %>
  <div>
  <%= link_to "profile edit", edit_user_path(current_user) %>
 </div>

  <% else %>
  <h1>User info</h1>
  <%= image_tag user.get_profile_image(100,100) %>
  <h4>name</h4>
  <%= user.name %>
  <h4>introduction</h4>
  <%= user.introduction %>
  <div>
  <%= link_to "profile edit", edit_user_path(user) %>
  </div>
  <% end %>
</div>

<div>
  <h1>New book</h1>
  <%= form_with model: book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>