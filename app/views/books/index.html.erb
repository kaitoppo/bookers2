<h1>Books</h1>
<% if @book_new.errors.any? %>
  <%= @book_new.errors.count %>件のエラーが発生しました
  <ul>
    <% @book_new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<table>
    <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
    </thead>
    <% @books.each do |book| %>
    <tbody>
       <td>
          <%= link_to user_path(book.user.id) do %>
           <%= image_tag book.user.get_profile_image(100,100) %>
           <% end %>
       </td>
       <td>
           <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
        </td>
       <td><%= book.body %></td>
       <th colspan="3"></th>
    <% end %>
    </tbody>
</table>

<div>
<%= render 'books/list', book: @book_new, user: @user%>
</div>