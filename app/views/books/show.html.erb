<div class="container">
  <div class="row">
     <div class="col-md-4">
        <%= render 'books/list', book: @book_new, user: @user%>
     </div>
        <h1>Book detail</h1>
        <div class="col-md-8">
　　　　　<table class="book_show">
    　　　　　　<thead>
        　　　　　<th></th>
        　　　　　<th>Title</th>
        　　　　　<th>Opinion</th>
        　　　　　<th colspan="3"></th>
    　　　　　</thead>
    　　　　　<tbody>
      　　　　　　　<td><%= image_tag @books.user.get_profile_image(100,100) %>
      　　　　　　　<br>
      　　　　　　　<%= link_to user_path(@books.user.id) do %>
      　　　　　　　<%= @books.user.name %>
      　　　　　　　<% end %>
      　　　　　</td>
      　　　　　　　<td>
       　　　　　　<%= link_to book_path(@books.id) do %>
       　　　　　　<%= @books.title %>
       　　　　　　<% end %>
      　　　　　　　</td>
      　　　　　　　<td><%= @books.body %></td>
      　　　　　　　<th colspan="3"></th>
      　　　　　　　<% if @books.user == current_user %>
      　　　　　　　<td><%= link_to "Edit", edit_book_path(@books.id) %></td>
      　　　　　<td><%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
       　　　　　　<% end %>
    　　　　　</tbody>
　　　　</table>
　　　</div>
　　</div>
　</div>
　
<div>
</div>