<div class="container">
<div class="row">
<div class="col-md-3">
<%= render 'books/list', book: @book_new, user: @user%>
</div>
<div class="col-md-8">
<h2>Book detail</h2>
<table class="table">
　<tbody>
　<tr>
  <td>
  <%= link_to user_path(@books.user.id) do %>
　<%= image_tag @books.user.get_profile_image(100,100) %>
  <br>
  <%= @books.user.name %>
  <% end %>
  </td>
  <td>
  <%= link_to book_path(@books.id) do %>
　<%= @books.title %>
　<% end %>
  </td>
　<td><%= @books.body %></td>
  <th colspan="3"></th>
　<% if @books.user == current_user %>
　<td><%= link_to "Edit", edit_book_path(@books.id) %></td>
　<td><%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  <% end %>
　</tbody>
　</table>
　</div>
　</div>
　</div>