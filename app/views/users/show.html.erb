<h1>Books</h1>
<table>
    <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
    </thead>
    <% @books.each do |book| %>
    <tbody>
       <td>
          <%= link_to user_path(@user.id) do %>
           <%= image_tag book.user.get_profile_image(100,100) %>
           <% end %>
       </td>
       <td>
           <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
        </td>
       <td><%= book.body %></td>
       <td colspan="3"></td>
     <% end %>
    </tbody>
</table>

<div>
<%= render 'books/list', book: @book_new, user: @user%>
</div>